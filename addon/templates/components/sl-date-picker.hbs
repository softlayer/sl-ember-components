{{#if label}}
    <label for={{inputElementId}}>{{label}}</label>
{{/if}}

{{input
    viewName="sl-date-picker-view"
    type="text"
    class="date-picker form-control"
    disabled=disabled
    placeholder=placeholder
    value=value
}}

{{#if helpText}}
    <p class="help-block">{{helpText}}</p>
{{/if}}
