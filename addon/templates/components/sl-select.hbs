{{#if label}}
    <label class="control-label">
        {{label}}

        {{#if optional}}
            <small class="text-info">Optional</small>
        {{/if}}

        {{#if required}}
            <small class="text-danger">Required</small>
        {{/if}}
    </label>
{{/if}}

{{input
    type="hidden"
    class="form-control"
    disabled=disabled
    name=name
    readonly=readonlyString
    value=value
}}

{{#if helpText}}
    <p class="help-block">{{helpText}}</p>
{{/if}}
