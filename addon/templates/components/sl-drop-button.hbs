{{#sl-button
    class="dropdown-toggle"
    dataToggle="dropdown"
    size=size
}}
    {{#if label}}
        {{label}}
        <span class={{iconClass}}></span>
    {{else}}
        {{#if content}}
            {{yield}}
        {{/if}}
    {{/if}}
{{/sl-button}}

<ul class="dropdown-menu {{if rightAligned "dropdown-menu-right"}}" role="menu">
    {{#if content}}
        {{#each content as |option|}}
            {{sl-drop-option
                action=option.action
                icon=option.icon
                label=option.label
            }}
        {{/each}}
    {{else}}
        {{yield}}
    {{/if}}
</ul>
