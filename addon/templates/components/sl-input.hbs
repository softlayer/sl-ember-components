{{#if label}}
    <label {{bind-attr for="sl-input-view.elementId"}} class="control-label">
        {{label}}

        {{#if optional}}
            <small class="text-info">Optional</small>
        {{/if}}

        {{#if required}}
            <small class="text-danger">Required</small>
        {{/if}}
    </label>
{{/if}}

{{input
    viewName="sl-input-view"
    type=type
    action="enter"
    class=inputClass
    disabled=disabled
    placeholder=placeholder
    readonly=readonly
    value=value
}}

{{#if helpText}}
    <p class="help-block">{{helpText}}</p>
{{/if}}
