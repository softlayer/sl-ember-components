{{#if label}}
    <label {{bind-attr for="sl-select-view.elementId"}} class="control-label">
        {{label}}

        {{#if optional}}
            <small class="text-info">Optional</small>
        {{/if}}

        {{#if required}}
            <small class="text-danger">Required</small>
        {{/if}}
    </label>
{{/if}}

{{view Ember.TextField
    viewName="sl-select-view"
    type="hidden"
    class="form-control"
    disabled=disabled
    readonly=readonly
}}

{{#if helpText}}
    <p class="help-block">{{helpText}}</p>
{{/if}}