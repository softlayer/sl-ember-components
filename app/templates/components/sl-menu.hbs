{{#if menu.label}}
    <a href="#" {{bind-attr class="menu.pages:submenu"}} {{action "selected" target="view" bubbles=false}}>{{view.menu.label}}</a>
{{/if}}

{{#if menu.pages}}
    <ul {{bind-attr class="view.isRoot:list-inline"}}>
        {{#each page in menu.pages}}
            {{sl-menu className=page.className tagName="li" menuBinding="page" isRoot=false}}
        {{/each}}

        {{#if view.displayShowAll}}
            {{#view view.AllView}}
                <a href="#" class="fa fa-chevron-circle-down" style="font-size: 18px;"></a>
            {{/view}}
        {{/if}}
    </ul>
{{/if}}
